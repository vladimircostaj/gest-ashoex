    "components": {
        "schemas": {
            "PersonalAcademico": {
                "title": "Personal Académico",
                "description": "Modelo que representa a un miembro del personal académico",
                "properties": {
                    "id": {
                        "description": "ID único del personal académico",
                        "type": "integer",
                        "example": 1
                    },
                    "nombre": {
                        "description": "Nombre del personal académico",
                        "type": "string",
                        "example": "Juan Pérez"
                    },
                    "email": {
                        "description": "Correo electrónico del personal académico",
                        "type": "string",
                        "example": "juan.perez@example.com"
                    },
                    "telefono": {
                        "description": "Número de teléfono del personal académico",
                        "type": "string",
                        "example": "+591123456789"
                    },
                    "estado": {
                        "description": "Estado del personal académico",
                        "type": "string",
                        "example": "ACTIVO"
                    },
                    "tipo_personal_id": {
                        "description": "ID del tipo de personal académico",
                        "type": "integer",
                        "example": 1
                    },
                    "tipoPersonal": {
                        "$ref": "#/components/schemas/TipoPersonal"
                    }
                },
                "type": "object"
            },
            "TipoPersonal": {
                "title": "Tipo de Personal",
                "description": "Modelo que representa los diferentes tipos de personal académico",
                "properties": {
                    "id": {
                        "description": "ID único del tipo de personal",
                        "type": "integer",
                        "example": 1
                    },
                    "nombre": {
                        "description": "Nombre del tipo de personal",
                        "type": "string",
                        "example": "Profesor"
                    }
                },
                "type": "object"
            },
            "User": {
                "title": "Usuario",
                "description": "Modelo que representa a un usuario en el sistema",
                "properties": {
                    "id": {
                        "description": "ID único del usuario",
                        "type": "integer",
                        "example": 1
                    },
                    "name": {
                        "description": "Nombre del usuario",
                        "type": "string",
                        "example": "John Doe"
                    },
                    "email": {
                        "description": "Correo electrónico del usuario",
                        "type": "string",
                        "example": "john.doe@example.com"
                    },
                    "email_verified_at": {
                        "description": "Fecha en la que el correo electrónico fue verificado",
                        "type": "string",
                        "format": "date-time",
                        "example": "2024-10-16T15:00:00Z"
                    },
                    "created_at": {
                        "description": "Fecha de creación del usuario",
                        "type": "string",
                        "format": "date-time",
                        "example": "2024-10-15T08:00:00Z"
                    },
                    "updated_at": {
                        "description": "Fecha de última actualización del usuario",
                        "type": "string",
                        "format": "date-time",
                        "example": "2024-10-16T09:00:00Z"
                    },
                    "remember_token": {
                        "description": "Token de recordatorio para el usuario",
                        "type": "string",
                        "example": "XaBiqGJieKaS3wKlJ4cP5D"
                    }
                },
                "type": "object"
            }
        }
    },
