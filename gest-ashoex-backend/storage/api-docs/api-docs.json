{
    "openapi": "3.0.0",
    "info": {
        "title": "API Health Check",
        "description": "API para verificar el estado de salud del sistema",
        "version": "1.0.0"
    },
    "paths": {
        "/api/aulas/{id}": {
            "get": {
                "tags": [
                    "Aulas"
                ],
                "summary": "Obtener información de un aula específica",
                "description": "Retorna los detalles de un aula por su ID, incluyendo sus usos y facilidades.",
                "operationId": "getAulaById",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID del aula",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Éxito. Datos del aula obtenidos correctamente",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "id": {
                                            "type": "integer",
                                            "example": 1
                                        },
                                        "numero_aula": {
                                            "type": "string",
                                            "example": "A101"
                                        },
                                        "capacidad": {
                                            "type": "integer",
                                            "example": 40
                                        },
                                        "habilitada": {
                                            "type": "boolean",
                                            "example": true
                                        },
                                        "id_ubicacion": {
                                            "type": "integer",
                                            "example": 2
                                        },
                                        "usos": {
                                            "type": "array",
                                            "items": {
                                                "properties": {
                                                    "id": {
                                                        "type": "integer",
                                                        "example": 1
                                                    },
                                                    "nombre": {
                                                        "type": "string",
                                                        "example": "Clases"
                                                    }
                                                },
                                                "type": "object"
                                            }
                                        },
                                        "facilidades": {
                                            "type": "array",
                                            "items": {
                                                "properties": {
                                                    "id": {
                                                        "type": "integer",
                                                        "example": 1
                                                    },
                                                    "descripcion": {
                                                        "type": "string",
                                                        "example": "Proyector"
                                                    }
                                                },
                                                "type": "object"
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "No encontrado. Aula no existe",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "type": "string",
                                            "example": "Aula no encontrada"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/aulas": {
            "post": {
                "tags": [
                    "Aulas"
                ],
                "summary": "Almacena una nueva aula en la base de datos",
                "operationId": "4ed9f79dd5cd9461861129d4b77d29db",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "numero_aula",
                                    "id_ubicacion",
                                    "id_uso",
                                    "facilidades"
                                ],
                                "properties": {
                                    "numero_aula": {
                                        "type": "string",
                                        "maxLength": 30,
                                        "example": "Aula 101"
                                    },
                                    "capacidad": {
                                        "type": "integer",
                                        "example": 30,
                                        "nullable": true
                                    },
                                    "habilitada": {
                                        "type": "boolean",
                                        "example": true
                                    },
                                    "id_ubicacion": {
                                        "type": "integer",
                                        "example": 1
                                    },
                                    "id_uso": {
                                        "type": "integer",
                                        "example": 2
                                    },
                                    "facilidades": {
                                        "type": "array",
                                        "items": {
                                            "type": "integer",
                                            "example": 1
                                        }
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Aula registrada exitosamente",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": true
                                        },
                                        "data": {
                                            "properties": {
                                                "id": {
                                                    "type": "integer",
                                                    "example": 1
                                                },
                                                "numero_aula": {
                                                    "type": "string",
                                                    "example": "Aula 101"
                                                },
                                                "capacidad": {
                                                    "type": "integer",
                                                    "example": 30
                                                },
                                                "habilitada": {
                                                    "type": "boolean",
                                                    "example": true
                                                },
                                                "id_ubicacion": {
                                                    "type": "integer",
                                                    "example": 1
                                                },
                                                "id_uso": {
                                                    "type": "integer",
                                                    "example": 2
                                                },
                                                "facilidades": {
                                                    "type": "array",
                                                    "items": {
                                                        "type": "integer",
                                                        "example": 1
                                                    }
                                                }
                                            },
                                            "type": "object"
                                        },
                                        "error": {
                                            "type": "array",
                                            "items": {},
                                            "example": []
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Aula registrada exitosamente"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Error de validación",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": false
                                        },
                                        "data": {
                                            "type": "array",
                                            "items": {},
                                            "example": []
                                        },
                                        "error": {
                                            "type": "array",
                                            "items": {
                                                "properties": {
                                                    "status": {
                                                        "type": "string",
                                                        "example": "422"
                                                    },
                                                    "detail": {
                                                        "type": "string",
                                                        "example": "El campo numero aula es obligatorio."
                                                    }
                                                },
                                                "type": "object"
                                            },
                                            "example": [
                                                {
                                                    "status": "422",
                                                    "detail": "El campo numero aula es obligatorio."
                                                },
                                                {
                                                    "status": "422",
                                                    "detail": "El campo id ubicacion seleccionado no existe."
                                                },
                                                {
                                                    "status": "422",
                                                    "detail": "El campo facilidades seleccionado no existe."
                                                }
                                            ]
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Error"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Error en la conexión a la base de datos"
                    }
                }
            }
        },
        "/api/edificios": {
            "post": {
                "tags": [
                    "Edificios"
                ],
                "summary": "Crear un nuevo edificio",
                "description": "Crea un edificio con el nombre y la geolocalización proporcionados.",
                "operationId": "createEdificio",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "nombre_edificio"
                                ],
                                "properties": {
                                    "nombre_edificio": {
                                        "type": "string",
                                        "example": "Edificio Central"
                                    },
                                    "geolocalizacion": {
                                        "type": "string",
                                        "example": "-19.57347,-65.75537"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Éxito. Edificio creado correctamente",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "id": {
                                            "type": "integer",
                                            "example": 1
                                        },
                                        "nombre_edificio": {
                                            "type": "string",
                                            "example": "Edificio Central"
                                        },
                                        "geolocalizacion": {
                                            "type": "string",
                                            "example": "-19.57347,-65.75537"
                                        },
                                        "created_at": {
                                            "type": "string",
                                            "format": "date-time",
                                            "example": "2024-10-28T12:34:56Z"
                                        },
                                        "updated_at": {
                                            "type": "string",
                                            "format": "date-time",
                                            "example": "2024-10-28T12:34:56Z"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Error de validación. Faltan datos o no son válidos",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "type": "string",
                                            "example": "El nombre del edificio es obligatorio."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/health": {
            "get": {
                "tags": [
                    "Health Check"
                ],
                "summary": "Verifica el estado de la API y la conexión a la base de datos",
                "description": "Devuelve el estado de salud del sistema",
                "operationId": "7134f626524ee8957bd6315b959ed4e1",
                "responses": {
                    "200": {
                        "description": "Estado de salud correcto",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "healthy"
                                        },
                                        "database": {
                                            "type": "string",
                                            "example": "Connected"
                                        },
                                        "timestamp": {
                                            "type": "string",
                                            "format": "date-time"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Error en la conexión a la base de datos"
                    }
                }
            }
        }
    },
    "tags": [
        {
            "name": "Aulas",
            "description": "Aulas"
        },
        {
            "name": "Edificios",
            "description": "Edificios"
        },
        {
            "name": "Health Check",
            "description": "Health Check"
        }
    ]
}