        "/api/personal-academico/{id}": {
            "put": {
                "tags": [
                    "Personal Académico"
                ],
                "summary": "Actualizar la información de un personal académico",
                "description": "Actualiza los datos de un personal académico existente.",
                "operationId": "actualizarPersonalAcademico",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID del personal académico",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "nombre",
                                    "email",
                                    "telefono",
                                    "estado",
                                    "tipo_personal_id"
                                ],
                                "properties": {
                                    "nombre": {
                                        "type": "string",
                                        "example": "Juan Pérez"
                                    },
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "juan.perez@example.com"
                                    },
                                    "telefono": {
                                        "type": "string",
                                        "example": "+59171234567"
                                    },
                                    "estado": {
                                        "type": "string",
                                        "example": "ACTIVO"
                                    },
                                    "tipo_personal_id": {
                                        "type": "integer",
                                        "example": 1
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Personal académico actualizado exitosamente",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Personal académico actualizado exitosamente."
                                        },
                                        "personal_academico": {
                                            "$ref": "#/components/schemas/PersonalAcademico"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Personal académico no encontrado",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
