        "/api/edificios": {
            "post": {
                "tags": [
                    "Edificios"
                ],
                "summary": "Crear un nuevo edificio",
                "description": "Crea un edificio con el nombre y la geolocalización proporcionados.",
                "operationId": "createEdificio",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "nombre_edificio"
                                ],
                                "properties": {
                                    "nombre_edificio": {
                                        "type": "string",
                                        "example": "Edificio Central"
                                    },
                                    "geolocalizacion": {
                                        "type": "string",
                                        "example": "-19.57347,-65.75537"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Éxito. Edificio creado correctamente",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "id": {
                                            "type": "integer",
                                            "example": 1
                                        },
                                        "nombre_edificio": {
                                            "type": "string",
                                            "example": "Edificio Central"
                                        },
                                        "geolocalizacion": {
                                            "type": "string",
                                            "example": "-19.57347,-65.75537"
                                        },
                                        "created_at": {
                                            "type": "string",
                                            "format": "date-time",
                                            "example": "2024-10-28T12:34:56Z"
                                        },
                                        "updated_at": {
                                            "type": "string",
                                            "format": "date-time",
                                            "example": "2024-10-28T12:34:56Z"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Error de validación. Faltan datos o no son válidos",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "type": "string",
                                            "example": "El nombre del edificio es obligatorio."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
