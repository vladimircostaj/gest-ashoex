    "paths": {
        "/api/aulas/{id}": {
            "get": {
                "tags": [
                    "Aulas"
                ],
                "summary": "Obtener información de un aula específica",
                "description": "Retorna los detalles de un aula por su ID, incluyendo sus usos y facilidades.",
                "operationId": "getAulaById",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID del aula",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Éxito. Datos del aula obtenidos correctamente",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "id": {
                                            "type": "integer",
                                            "example": 1
                                        },
                                        "numero_aula": {
                                            "type": "string",
                                            "example": "A101"
                                        },
                                        "capacidad": {
                                            "type": "integer",
                                            "example": 40
                                        },
                                        "habilitada": {
                                            "type": "boolean",
                                            "example": true
                                        },
                                        "id_ubicacion": {
                                            "type": "integer",
                                            "example": 2
                                        },
                                        "usos": {
                                            "type": "array",
                                            "items": {
                                                "properties": {
                                                    "id": {
                                                        "type": "integer",
                                                        "example": 1
                                                    },
                                                    "nombre": {
                                                        "type": "string",
                                                        "example": "Clases"
                                                    }
                                                },
                                                "type": "object"
                                            }
                                        },
                                        "facilidades": {
                                            "type": "array",
                                            "items": {
                                                "properties": {
                                                    "id": {
                                                        "type": "integer",
                                                        "example": 1
                                                    },
                                                    "descripcion": {
                                                        "type": "string",
                                                        "example": "Proyector"
                                                    }
                                                },
                                                "type": "object"
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "No encontrado. Aula no existe",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "type": "string",
                                            "example": "Aula no encontrada"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            },
            "put": {
                "tags": [
                    "Aulas"
                ],
                "summary": "Actualizar un aula existente",
                "description": "Actualiza un aula por su ID",
                "operationId": "4a8ff30e91a40a21952f1277a2aab123",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID del aula",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "format": "int64"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "numero_aula": {
                                        "type": "string",
                                        "example": "Aula 101"
                                    },
                                    "capacidad": {
                                        "type": "integer",
                                        "example": "30"
                                    },
                                    "habilitada": {
                                        "type": "boolean",
                                        "example": "true"
                                    },
                                    "id_ubicacion": {
                                        "type": "integer",
                                        "example": "1"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Aula actualizada",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "id_aula": {
                                            "type": "integer",
                                            "example": "1"
                                        },
                                        "numero_aula": {
                                            "type": "string",
                                            "example": "Aula 101"
                                        },
                                        "capacidad": {
                                            "type": "integer",
                                            "example": "30"
                                        },
                                        "habilitada": {
                                            "type": "boolean",
                                            "example": "true"
                                        },
                                        "id_ubicacion": {
                                            "type": "integer",
                                            "example": "1"
                                        },
                                        "created_at": {
                                            "type": "string",
                                            "format": "date-time"
                                        },
                                        "updated_at": {
                                            "type": "string",
                                            "format": "date-time"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Aula no encontrada"
                    },
                    "422": {
                        "description": "Error de validación"
                    }
                }
            }
        },
        "/api/aulas": {
            "post": {
                "tags": [
                    "Aulas"
                ],
                "summary": "Almacena una nueva aula en la base de datos",
                "operationId": "4ed9f79dd5cd9461861129d4b77d29db",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "numero_aula",
                                    "id_ubicacion",
                                    "id_uso",
                                    "facilidades"
                                ],
                                "properties": {
                                    "numero_aula": {
                                        "type": "string",
                                        "maxLength": 30,
                                        "example": "Aula 101"
                                    },
                                    "capacidad": {
                                        "type": "integer",
                                        "example": 30,
                                        "nullable": true
                                    },
                                    "habilitada": {
                                        "type": "boolean",
                                        "example": true
                                    },
                                    "id_ubicacion": {
                                        "type": "integer",
                                        "example": 1
                                    },
                                    "id_uso": {
                                        "type": "integer",
                                        "example": 2
                                    },
                                    "facilidades": {
                                        "type": "array",
                                        "items": {
                                            "type": "integer",
                                            "example": 1
                                        }
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Aula registrada exitosamente",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": true
                                        },
                                        "data": {
                                            "properties": {
                                                "id": {
                                                    "type": "integer",
                                                    "example": 1
                                                },
                                                "numero_aula": {
                                                    "type": "string",
                                                    "example": "Aula 101"
                                                },
                                                "capacidad": {
                                                    "type": "integer",
                                                    "example": 30
                                                },
                                                "habilitada": {
                                                    "type": "boolean",
                                                    "example": true
                                                },
                                                "id_ubicacion": {
                                                    "type": "integer",
                                                    "example": 1
                                                },
                                                "id_uso": {
                                                    "type": "integer",
                                                    "example": 2
                                                },
                                                "facilidades": {
                                                    "type": "array",
                                                    "items": {
                                                        "type": "integer",
                                                        "example": 1
                                                    }
                                                }
                                            },
                                            "type": "object"
                                        },
                                        "error": {
                                            "type": "array",
                                            "items": {},
                                            "example": []
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Aula registrada exitosamente"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Error de validación",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": false
                                        },
                                        "data": {
                                            "type": "array",
                                            "items": {},
                                            "example": []
                                        },
                                        "error": {
                                            "type": "array",
                                            "items": {
                                                "properties": {
                                                    "status": {
                                                        "type": "string",
                                                        "example": "422"
                                                    },
                                                    "detail": {
                                                        "type": "string",
                                                        "example": "El campo numero aula es obligatorio."
                                                    }
                                                },
                                                "type": "object"
                                            },
                                            "example": [
                                                {
                                                    "status": "422",
                                                    "detail": "El campo numero aula es obligatorio."
                                                },
                                                {
                                                    "status": "422",
                                                    "detail": "El campo id ubicacion seleccionado no existe."
                                                },
                                                {
                                                    "status": "422",
                                                    "detail": "El campo facilidades seleccionado no existe."
                                                }
                                            ]
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Error"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Error en la conexión a la base de datos"
                    }
                }
            }
        },
